<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
    依赖检查抑制配置文件
    用于抑制已知的误报或已接受的风险
    -->
    
    <!-- 抑制测试依赖的低风险漏洞 -->
    <suppress>
        <notes><![CDATA[
        Spock 测试框架的依赖，仅在测试环境使用
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.spockframework/.*@.*$</packageUrl>
        <cve>CVE-2018-1000632</cve>
    </suppress>
    
    <!-- 抑制 Groovy 相关的低风险漏洞 -->
    <suppress>
        <notes><![CDATA[
        Groovy 语言相关的低风险漏洞，已在新版本中修复
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.groovy/.*@.*$</packageUrl>
        <cve>CVE-2020-17521</cve>
    </suppress>
    
    <!-- 抑制构建工具相关的漏洞 -->
    <suppress>
        <notes><![CDATA[
        Gradle 构建工具相关漏洞，不影响运行时安全
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.gradle/.*@.*$</packageUrl>
        <vulnerabilityName>CVE-2019-15052</vulnerabilityName>
    </suppress>
</suppressions>